<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo_dialog"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="28dp"
        android:text="@string/iniciar_estacionamiento_item"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cuerpo_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:text="@string/textoAparcamiento"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:id="@+id/recycler"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/btnAceptar"
        android:id="@+id/btnCancelar"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:textColor="@drawable/round_button_text"
        android:text="@string/cancelar"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_below="@+id/recycler"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnAceptar"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:textColor="@drawable/round_button_text"
        android:text="@string/aceptar"
        android:enabled="false" />
</RelativeLayout>