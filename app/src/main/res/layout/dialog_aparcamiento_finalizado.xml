<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="28dp"
        android:text="@string/aparcamiento_libre"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tiempo_libre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="@string/tiempo_libre"/>

        <TextView
            android:id="@+id/calle_libre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:text="@string/calle"/>

        <TextView
            android:id="@+id/zona_libre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:textSize="20dp"
            android:text="@string/zona"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/aceptar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_button"
        android:text="@string/aceptar"
        android:textColor="@drawable/round_button_text"
        android:textStyle="bold" />

</RelativeLayout>