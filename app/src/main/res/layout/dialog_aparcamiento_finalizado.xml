<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:textSize="28dp"
        android:text="Aparcamiento libre"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tiempo_libre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
        android:text="Tiempo que lleva libre: 16:25:15"/>

    <TextView
        android:id="@+id/calle_libre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="140dp"
        android:textSize="20dp"
        android:text="Calle: Calle Zafiro"/>

    <TextView
        android:id="@+id/zona_libre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        android:textSize="20dp"
        android:text="Zona: Zona gratis"/>

    <Button
        android:id="@+id/aceptar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="240dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_bright"
        android:text="ACEPTAR"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>